{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2,
      {
        "FunctionExpression": {
          "parameters": "off"
        }
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "eol-last": [
      "warn"
    ],
    "no-undef": [
      "off"
    ],
    "no-empty": [
      "off"
    ],
    "no-unused-vars": 0
  }
}
